<h1>Simulateur de congés payés – Contrat “Année Incomplète”</h1>

<%= form_with url: simulate_path, method: :post, local: true do |f| %>
  <% if flash[:alert] %>
    <p style="color: red;"><%= flash[:alert] %></p>
  <% end %>

  <div>
    <%= f.label :start_date, "Date de début de contrat" %><br>
    <%= f.date_field :start_date, required: true %>
  </div>

  <div>
    <%= f.label :end_date, "Date de fin de contrat" %><br>
    <%= f.date_field :end_date, required: true %>
  </div>

  <div>
    <%= f.label :monthly_salary, "Salaire brut mensuel (€)" %><br>
    <%= f.number_field :monthly_salary, min: 200, max: 1200, step: 0.01, required: true %>
  </div>

  <div>
    <%= f.submit "Calculer la simulation" %>
  </div>
<% end %>
